#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
PS1='[\u@\h \W]\$ '

alias vi=vim

# Python VirtualEnv
export WORKON_HOME=~/.virtualenvs
source /usr/bin/virtualenvwrapper.sh

if [[ -z $DISPLAY && $(tty) = /dev/tty1 ]]; then
	exec startx
fi
